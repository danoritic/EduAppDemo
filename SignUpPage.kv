#: import do login_page.do

#SignupMainLayout:



<SignupMainLayout>:
    id:SignupMainLayout
    login_page_button:login_page_button
    size_hint_y:None
    height:650
    canvas.before:
        Color:
            rgba:1,1,1,0
        Rectangle:
            size:self.size
            pos:self.pos
        


        

        
    ElevatedTextInput:
        pos_hint:{"center_x":.5,"center_y":.9}
        size_hint_x:.9
        width:270
        id:fullname_text_box
        hint_text:"Full Name"
    ElevatedTextInput:
        pos_hint:{"center_x":.5,"center_y":.8}
        size_hint_x:.9
        width:270
        id:password_text_box
        hint_text:"password"
    
    ElevatedTextInput:
        pos_hint:{"center_x":.5,"center_y":.7}
        size_hint_x:.9
        width:270
        id:gender_text_box
        hint_text:"Gender"
        
    ElevatedTextInput:
        pos_hint:{"center_x":.5,"center_y":.6}
        size_hint_x:.9
        width:270
        id:fullname_text_box
        hint_text:"Email"
        
    ElevatedTextInput:
        pos_hint:{"center_x":.5,"center_y":.5}
        size_hint_x:.9
        width:270
        id:fullname_text_box
        hint_text:"Phone Number"
        
    
    
    RelativeLayout:
        pos_hint:{"center_y":.4,"right":.9}
        #pos:[password_text_box.pos[0],password_text_box.pos[1]-30,]
        size_hint:None,None,
        size:160,40
        SmartButton:
            #pos_hint:{'center_y':.1}
            id:sign_up_button
            text:'Sign up'
            bold:True
            
            background_color:0,0,0,0
            on_release:SignupMainLayout.do()
            canvas.before:
                Color:
                    rgba:0.00, 0.50, 0.00,1
                RoundedRectangle:
                    radius:[20]
                    pos:self.pos
                    size:self.size
    RelativeLayout:
        pos_hint:{"center_y":.27,"center_x":.5}
        size_hint:None,None
        size: 150,30
        Label:
            id: Login_anchor
            text:"Already Registered?"
            font_size:"10dp"
            color:0.43, 0.39, 0.39,1
        Button:
            id:login_page_button
            pos:[Login_anchor.pos[0]+Login_anchor.width/2-23,Login_anchor.pos[1]]
            text:"Login"
            font_size:"10dp"
            color:0.00, 0.50, 0.00,1
            background_color:0,0,0,0
            on_press: SignupMainLayout.the_scroll.scroll_to( root.master.ids.AuthMainLayout.symbol_casen,padding=100)
    
        
        
<ElevatedTextInput@Elevated>:
    size_hint:1,None
    height:35
    elevation: 1.5
    shadow_offset: -1, 3
    shadow_softness: 5
    radius:[5]
    md_bg_color:1,0,1,0
    hint_text:"1"
    #on_text_validate:print(1)
    text_validate:True
    input:self.children[0]
    MDTextField:
        id:input
        on_text_validate:root.text_validate= not  root.text_validate
        size_hint_x:.97
        pos_hint:{"center_x":.5}
        mode:"fill"
        #mode:"line"
        hint_text:root.hint_text
        #text_color:1,0,0,1
        #hint_text:'Enter your password'
        hint_text_font_size:"40dp"
        id:password_text_box
        #hint_text_color:0,0,0,1
        background_color:1,1,1,0
        #foreground_color:0,0,0,.5
        radius:[5]
        #valign:"center"
        #halign:"center"
        cursor_color:0,0,0,1
        
        
        font_size:"15dp"
        fill_color_normal:0.75, 0.92, 0.75,1
        fill_color_focus:1,1,1,1

        #hint_text_color_normal:0.24, 0.75, 0.24,1
        hint_text_color_focus:0.24, 0.75, 0.24,1
        text_color_normal:0.24, 0.75, 0.24,1
        text_color_focus:0.24, 0.75, 0.24,1
        

        color:0.24, 0.75, 0.24,1
        line_color_focus:0.24, 0.75, 0.24,1
        #set_active_underline_color:0.24, 0.75, 0.24,1
