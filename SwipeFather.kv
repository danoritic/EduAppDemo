FloatLayout:
    MySwiper:
        id:MySwiper
    FloatLayout:
        my_swiper:MySwiper
        master:root
        size_hint:None,None
        size:25,20
        pos_hint:{"center_x":.5,"center_y":.04}
        #my_swiper:0
        
        canvas.before:
            Color:
                rgba: 0,1,1,0
            Rectangle:
                pos:self.pos
                size:self.size
            Color:
                rgba: [0,.5,0,1] 
            Ellipse:
                pos:[self.x+.1*self.width+self.width*0/3,self.y+.35*self.height]
                size:5,5
            Color:
                rgba: [0,.5,0,1] if root.ids.MySwiper.index>0 else [1,1,1,1]
            Ellipse:
                pos:[self.x+.1*self.width+self.width*1/3,self.y+.35*self.height]
                size:5,5
            Color:
                rgba: [0,.5,0,1] if root.ids.MySwiper.index>1 else [1,1,1,1]
            Ellipse:
                pos:[self.x+.1*self.width+self.width*2/3,self.y+.35*self.height]
                size:5,5

    



